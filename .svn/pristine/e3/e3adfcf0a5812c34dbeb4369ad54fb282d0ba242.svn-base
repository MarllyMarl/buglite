@model IEnumerable<Bug_Lite.Models.UserSection>

@{
    ViewBag.Title = "Manage User Sections";
}
@if (@TempData["Message"] != null)
 {
    <div class="alert alert-success alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      @TempData["Message"]
    </div> 
 }
<div class="row container panel panel-default">
    <fieldset>
        <ul class="breadcrumb">
         <li>@Html.ActionLink("Administration", "Index", "Admin")</li>
         <li class="active">Manage User Sections</li>
       </ul>
        <legend>Manage User Sections</legend>
         <p>@Html.ActionLink("Create New", "Create", null, null, new { @class = "btn btn-success btn-md" }) </p>
         <br />
         <table class="table table-striped">
           <tr>
            <th></th>
            <th>Section</th>
            <th class="alignCheckBox">Active</th>
          </tr>
          @foreach (var item in Model) {
          <tr>
           <td>@Html.ActionLink("Edit", "Edit", new { id = item.UserSectionId }, new { @class = "btn btn-success btn-sm" })
               @Html.ActionLink("Delete", "Delete", new { id = item.UserSectionId }, new { onclick = "return DeleteConfirm()", @class = "btn btn-danger btn-sm" })
           </td>
           <td>@Html.DisplayFor(modelItem => item.Section)</td>
           <td class="alignCheckBox">@Html.DisplayFor(modelItem => item.Active)</td>
         </tr>
        }
       </table>  
    </fieldset>
    </div><!-- container END -->

    <!-- Delete JS Dialog -->
    <script type="text/javascript">
       function DeleteConfirm() {
         if (confirm("Are you sure you want to delete this User Section?"))
            return true;
          else
         return false;
       }
    </script>
    <!-- JS references needed for delete notification message -->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script> 

    <br /><br /><br /><br />
    <br /><br /><br /><br />
    <br /><br /><br /><br />
    <br /><br /><br /><br />
    <br /><br /><br />

    
 
   
