@model IEnumerable<Bug_Lite.Models.FDOTReleaseVersion>

@{
    ViewBag.Title = "FDOT Release Versions";
}
@if (@TempData["Message"] != null)
 {
    <div class="alert alert-success alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      @TempData["Message"]
    </div> 
 }
<div class="row container panel panel-default">
    <fieldset>
        <ul class="breadcrumb">
         <li>@Html.ActionLink("Administration", "Index", "Admin")</li>
         <li class="active">FDOT Release Versions</li>
       </ul>
        <legend>FDOT Release Versions</legend>
         <p>@Html.ActionLink("Create New", "Create", null, null, new { @class = "btn btn-success btn-md" }) </p>
         <br />
         <table class="table table-striped">
           <tr>
            <th></th>
            <th>Software Product</th>  
            <th>Release Version</th>
            <th class="alignCheckBox">Active</th>
          </tr>
          @foreach (var item in Model) {
          <tr>
           <td>@Html.ActionLink("Edit", "Edit", new { id=item.FDOTReleaseVersionId }, new { @class = "btn btn-success btn-sm" })
               @Html.ActionLink("Delete", "Delete", new { id = item.FDOTReleaseVersionId }, new { onclick = "return DeleteConfirm()", @class = "btn btn-danger btn-sm" })
           </td>
           <td>@Html.DisplayFor(modelItem => item.CADDSoftwareProduct.CADDSoftware)</td>
           <td>@Html.DisplayFor(modelItem => item.ReleaseVersion)</td>
           <td class="alignCheckBox">@Html.DisplayFor(modelItem => item.Active)</td>
         </tr>
        }
       </table>  
    </fieldset>
    </div><!-- container END -->

    <!-- Delete JS Dialog -->
    <script type="text/javascript">
       function DeleteConfirm() {
         if (confirm("Are you sure you want to delete this Version?"))
            return true;
          else
         return false;
       }
    </script>
    <!-- JS references needed for delete notification message -->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script> 

